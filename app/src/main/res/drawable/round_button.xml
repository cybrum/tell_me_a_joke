<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="oval">
        <solid android:color="@color/material_blue_700" />
    </shape></item>
    <item android:state_pressed="true"><shape android:shape="oval">
        <solid android:color="@color/material_blue_500" />
    </shape></item>

    <ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/material_blue_700" tools:ignore="NewApi">
        <item>
            <shape android:shape="oval">
                <solid android:color="@color/material_blue_500"/>
            </shape>
        </item>
    </ripple>
</selector>

